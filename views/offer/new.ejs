<%- include('../partials/header.ejs')%> <%- include('../nav_bar/nav_bar.ejs')%>
<div class="form-wrapper">
    <form action="/offers/create" method="POST">
        <h1>Create an offer</h1>
        <div class="offered-item">
            <h3><%= trade.title%></h3>
            <div class="gal-main-img">
                <img src="/<%= trade.images[0] %>" alt="broken images" />
            </div>
            <h4>Listed by: <%= trade.trader.firstName + ' ' + trade.trader.lastName%></h4>
            <h5>Status: <%=trade.status%></h5>
            <h5>Description:</h5>
            <p><%= trade.description%></p>
        </div>
        <div>
            <label for="item1">Item wanted</label>
            <select ide="item1" name="item1">
                <option value="<%=trade.id%>"><%=trade.title%></option>
            </select>
            <br />
            <label for="item2">Item to trade</label>
            <select id="item2" name="item2">
                <%if (trades.length) { trades.forEach(trade =>{%>
                <option value="<%=trade.id%>"><%=trade.title%></option>
                <%}) } else {%>
                <option value="none">No item found to trade</option>
                <%}%>
            </select>
        </div>
        <div id="submit-btn">
            <input type="submit" value="Submit offer" />
        </div>
    </form>
</div>

<%- include('../partials/footer.ejs')%>
