<%- include('../partials/header.ejs')%> <%- include('../nav_bar/nav_bar.ejs')%>
<div class="form-wrapper">
    <form action="/trades/<%=trade.id%>?_method=PUT" method="POST">
        <h1>Trade information</h1>
        <div>
            <label for="itemName">Item name</label>
            <input type="text" id="itemName" name="itemName" value="<%= trade.title%>" required />
        </div>
        <div>
            <label for="expiration">Expiring time</label>
            <input
                type="datetime-local"
                id="expiration"
                name="expiration"
                value="<%= trade.expiration%>"
                required />
        </div>
        <div>
            <label for="description">Description</label>
            <textarea
                id="description"
                name="description"
                rows="5"
                cols="25"
                required
                minlength="10"></textarea>
        </div>
        <div>
            <label for="pictures">Upload images</label>
            <input type="button" id="pictures" name="upload" value="upload" />
        </div>
        <div id="submit-btn">
            <input type="submit" value="Update Trade" />
            <input type="reset" />
        </div>
    </form>
</div>
<%- include('../partials/footer.ejs')%>
